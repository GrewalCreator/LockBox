<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" focusTraversable="true" prefHeight="511.0" prefWidth="276.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lock.controller.LoginController">
   <children>
      <Label alignment="CENTER" prefHeight="18.0" prefWidth="78.0" text="Welcome" />
      <TextField fx:id="usernameField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </PasswordField>
      <Button fx:id="loginButton" onAction="#login" text="Login" />
      <Label text="Don't Have An Account? " />
      <Hyperlink fx:id="sign_up_link" text="Sign Up" onAction="#switchToRegistration"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
