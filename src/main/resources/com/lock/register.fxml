<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="465.0" prefWidth="293.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lock.controller.RegistrationController">
   <children>
      <Label text="Registration View" />
      <TextField fx:id="usernameField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password" />
      <PasswordField promptText="Confirm Password" />
      <Button mnemonicParsing="false" fx:id="registerButton" onAction="#register" text="Register" />
      <Label text="Already Have An Account?" />
      <Hyperlink fx:id="signInLink" text="Sign In" onAction="#switchToLogin"/>

   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
